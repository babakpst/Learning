@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}


<div class="card-columns">
	@foreach (var item in Model.MonsterCards)
	{
		<div class="card shadow h-100" style="width:23vw">
			<img class="card-img-top" style="width:100%;height:15vw;object-fit:cover" src="@Url.Content("~/Images/" + item.ImageUri)" alt="Card image">
			<div class="card-body">
				<h4 class="card-title" style="height:3vw">@item.Name</h4>
				<div class="card-subtitle font-weight-bold alert-primary">@item.Slogan</div>
				<div class="card-text px-2 ">@item.ShortDescription</div>

			</div>
		</div>
	}
</div>